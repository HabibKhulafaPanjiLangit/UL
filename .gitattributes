# Set default behavior to automatically normalize line endings
* text=auto

# Ensure specific files use LF line endings
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Ensure Docker-related files use LF
Dockerfile text eol=lf
.dockerignore text eol=lf

# Treat these as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary